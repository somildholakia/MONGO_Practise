<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link rel="stylesheet" href="/index.css">
</head>

<body>

    <h3>All chats</h3>


    <form method="get" action="/chats/new"> 
        <button>New chat</button>
    </form>

    <br> 

    <% for(let chat of chats){ %>

        <diV class="chat">
            <p> From: <%= chat.from %>
            </p>
            <div class="msg">
                <p>
                    <%= chat.msg %>
                </p>
                <form method="get" action="/chats/<%= chat._id %>/edit"> 
                    <button>Edit</button>
                </form>
            </div>
            <p> Recieved By: <%= chat.to %>
            </p>
            <hr>
            <p> <%= chat.created.toString().split(" ")[4]  %> </p>
            <p> <%= chat.created.toString().split(" ").slice(0,4).join(" ") %> </p>
        </diV>

        <br><br>
        <% } %>


</body>

</html>